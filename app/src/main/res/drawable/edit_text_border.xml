<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false"
        android:state_focused="true">
        <shape android:padding="@dimen/_2sdp" android:shape="rectangle">
            <solid android:color="@color/white"/>
            <stroke android:width="1dp" android:color="@color/blue_500" />
            <corners android:radius="@dimen/_4sdp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:padding="@dimen/_2sdp"
            android:shape="rectangle">
            <solid android:color="@color/white"/>
            <stroke android:width="1dp" android:color="@color/grey_hint" />
            <corners android:radius="@dimen/_4sdp" />
        </shape>
    </item>
</selector>