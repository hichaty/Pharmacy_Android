<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChangePasswordActivity">

    <include layout="@layout/custom_toolbar" />

    <RelativeLayout
        android:id="@+id/rl_old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/blue_border_box">

        <ImageView
            android:id="@+id/iv_old_password"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/regular_lock" />


        <EditText
            android:id="@+id/etOldPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_toRightOf="@id/iv_old_password"
            android:background="@null"
            android:fontFamily="@font/roboto_regular"
            android:hint="Current Password"
            android:inputType="text"
            android:maxLength="15"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_900"
            android:textSize="@dimen/_11sdp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_old_password"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@drawable/blue_border_box">

        <ImageView
            android:id="@+id/iv_new_password"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/regular_lock" />


        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_toRightOf="@id/iv_new_password"
            android:background="@null"
            android:fontFamily="@font/roboto_regular"
            android:hint="New Password"
            android:inputType="text"
            android:maxLength="15"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_900"
            android:textSize="@dimen/_11sdp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_newc_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_new_password"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/blue_border_box">

        <ImageView
            android:id="@+id/iv_newc_password"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/regular_lock" />


        <EditText
            android:id="@+id/etNewCPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_toRightOf="@id/iv_newc_password"
            android:background="@null"
            android:fontFamily="@font/roboto_regular"
            android:hint="Confirm New Password"
            android:inputType="text"
            android:maxLength="15"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_900"
            android:textSize="@dimen/_11sdp" />
    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@id/rl_newc_password"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/roboto_bold"
        android:text="Done"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />

</RelativeLayout>